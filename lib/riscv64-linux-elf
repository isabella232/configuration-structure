[binaries]
c = 'riscv64-linux-elf-gcc'
cpp = 'riscv64-linux-elf-g++'
ar = 'riscv64-linux-elf-gcc-ar'
strip = 'riscv64-linux-elf-strip'
pkgconfig = 'riscv64-linux-elf-pkg-config'

[properties]
# Tell GCC to remove unused functions.
c_args = '-fdata-sections -ffunction-sections'
c_link_args = '-Wl,--gc-sections'

[host_machine]
system = 'linux'
